<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookDetails">

    <ImageView
        android:id="@+id/imageView99"
        android:layout_width="154dp"
        android:layout_height="155dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="174dp"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Load more details"
        android:textAlignment="center"
        android:textColor="#2a38fe"
        android:textColorHighlight="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView99" />



    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/booo1"
        android:layout_alignParentTop="true"
        android:text="Book:"
        android:textAlignment="center"

        android:visibility="invisible"

        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/name112"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="name"
        android:visibility="invisible"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/booo1"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/dabo1"
        android:layout_width="200dp"
        android:layout_height="23dp"
        android:text="date of borrow"
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/booo1" />

    <EditText
        android:id="@+id/bordat1"
        android:layout_width="200dp"
        android:layout_height="23dp"
        android:textAlignment="center"
        android:hint="dd-mm-yyyy"

        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/dabo1"
        app:layout_constraintTop_toBottomOf="@+id/booo1" />

    <TextView
        android:id="@+id/daret1"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:visibility="invisible"
        android:text="date of return"
        app:layout_constraintTop_toBottomOf="@+id/dabo1" />

    <EditText
        android:id="@+id/retdat1"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:hint="dd-mm-yyyy"

        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/daret1"
        app:layout_constraintTop_toBottomOf="@+id/dabo1" />
    <TextView
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="Price:"
        app:layout_constraintTop_toBottomOf="@+id/daret1"
        android:id="@+id/pri12"/>
    <TextView
        android:layout_width="200dp"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/pri12"
        android:text="150"
        android:id="@+id/pri13"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/daret1"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"

        android:text="caustion money:"
        android:id="@+id/caution1"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/pri12"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/caution1"
        android:text="RS 500"
        android:id="@+id/cautionprice1"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/pri12"/>

    <TextView
        android:layout_width="200dp"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:text="TOTAL: "
        android:id="@+id/total1"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/caution1"/>

    <TextView
        android:id="@+id/totalprice1"
        android:layout_width="200dp"
        android:layout_height="17dp"
        android:text="150"
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/total1"
        app:layout_constraintTop_toBottomOf="@+id/caution1" />
    <Button
        android:visibility="invisible"
        android:id="@+id/borbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="CONFIRM BOOKING"
        app:layout_constraintTop_toBottomOf="@+id/pri12" />


</android.support.constraint.ConstraintLayout>