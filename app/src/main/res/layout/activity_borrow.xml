<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BorrowActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:id="@+id/borr"
        android:text="BORROW"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textAllCaps="true"

        android:background="#5b80f1"
        android:textSize="12sp"
        android:visibility="visible"
        android:textStyle="bold" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/booo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:text="Book:"
        android:textAlignment="center"

        app:layout_constraintTop_toBottomOf="@+id/borr"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/name11"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="name"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/booo"
        app:layout_constraintTop_toBottomOf="@+id/borr" />
    <TextView
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="dateof borrow"
        app:layout_constraintTop_toBottomOf="@+id/booo"
        android:id="@+id/dabo"/>

    <TextView
        android:id="@+id/bordat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="da"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/dabo"
        app:layout_constraintTop_toBottomOf="@+id/booo" />
    <TextView
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="dateof return"
        app:layout_constraintTop_toBottomOf="@+id/dabo"
        android:id="@+id/daret"/>

    <TextView
        android:id="@+id/retdat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="da"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/daret"
        app:layout_constraintTop_toBottomOf="@+id/dabo" />
    <TextView
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Price:"
        app:layout_constraintTop_toBottomOf="@+id/daret"
        android:id="@+id/pri"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/pri"
        android:text="150"
        android:id="@+id/pri1"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/daret"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:text="caustion money:"
        android:id="@+id/caution"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/pri"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/caution"
        android:text="RS 500"
        android:id="@+id/cautionprice"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/pri"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="TOTAL: "
        android:id="@+id/total"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/caution"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/total"
        android:text="150"
        android:id="@+id/totalprice"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/caution"/>
    <Button
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="CONFIRM BOOKING"
        app:layout_constraintTop_toBottomOf="@+id/pri" />



</android.support.constraint.ConstraintLayout>